<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background color -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#FF72B3"
                android:endColor="#7183E7"
                android:type="linear"
                android:angle="45"
                />
        </shape>
    </item>

    <!-- Splash image -->
    <item>
        <bitmap
            android:src="@drawable/birincitatlilogo"
            android:gravity="center"/>
    </item>
</layer-list>
